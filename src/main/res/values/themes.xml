<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RosarioDiario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">#0000DD</item>

        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">#222222</item>
        <item name="android:statusBarColor">#0000DD</item>
    </style>

    <style name="texto" parent="Theme.RosarioDiario">
        <item name="android:textColor">@color/grisOscuro</item>
    </style>

    <style name="cardview" parent="Theme.MaterialComponents.DayNight">"
        <item name="cardBackgroundColor">#FFF</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">#777</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>