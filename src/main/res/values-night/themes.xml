<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RosarioDiario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">#0000DD</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0000DD</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="texto" parent="Theme.RosarioDiario">
        <item name="android:textColor">@color/grisClaro</item>
    </style>

    <style name="cardview" parent="Theme.MaterialComponents.DayNight">"
        <item name="cardBackgroundColor">#111</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">#777</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>